<!DOCTYPE html>
<html lang="en">

<head>
    <title>Confirm Order</title>
    <%- include("./partials/head.ejs") %>
</head>

<body class="order-page">
    <%- include("./partials/navbar.ejs") %>

        <div class="breadcrumb-option">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="breadcrumb__links">
                            <a href="/"><i class="fa fa-home"></i> Home</a>
                            <span>Confirm Order</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-center mt-5">
            <div class="invoice-wrapper mt-5 ">
                <div class="invoice-header text-center">
                    <h1>Thank You For Your Order!</h1>
                    <p>We appreciate your purchase.</p>
                </div>

                <!-- Customer Info -->
                <div class="customer-info">
                    <div class="section-title">Customer Details</div>
                    <div class="info-row">
                        <p><strong>Name:</strong>
                            <%= order.name %>
                        </p>
                        <p><strong>Email:</strong>
                            <%= order.email %>
                        </p>
                        <p><strong>Phone:</strong>
                            <%= order.mo %>
                        </p>
                        <p><strong>Address:</strong>
                            <%= order.address %>, <%= order.city %> - <%= order.zip %>
                        </p>
                    </div>
                </div>

                <!-- Order Summary -->
                <div class="order-summary">
                    <div class="section-title">Order Summary</div>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover align-middle text-center">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col">Product</th>
                                    <th scope="col">Price (₹)</th>
                                    <th scope="col">Qty</th>
                                    <th scope="col">Total (₹)</th>
                                </tr>
                            </thead>
                            <tbody class="table-group-divider">
                                <% order.cartItem.forEach(item=> { %>
                                    <tr>
                                        <td>
                                            <%= item.itemname %>
                                        </td>
                                        <td>₹ <%= item.price.toFixed(2) %>
                                        </td>
                                        <td>
                                            <%= item.qty %>
                                        </td>
                                        <td>₹ <%= item.total.toFixed(2) %>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" class="text-end fw-semibold">Subtotal</td>
                                    <td>₹ <%= order.subtotal.toFixed(2) %>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="text-end fw-semibold">Shipping</td>
                                    <td>₹ <%= order.deliveryCharge.toFixed(2) %>
                                    </td>
                                </tr>
                                <tr class="table-success">
                                    <td colspan="3" class="text-end fw-bold">Grand Total</td>
                                    <td>₹ <%= order.grandTotal.toFixed(2) %>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>

                <div class="btn-container">
                    <a href="/" class="btn border-secondary px-4 py-3 text-primary text-uppercase mb-4 ms-4 w-100">
                        Continue Shopping
                    </a>
                </div>
            </div>
        </div>
        <script>
            localStorage.removeItem("cart");
        </script>

        <%- include("./partials/footer.ejs") %>

            <%- include("./partials/script.ejs") %>

</body>

</html>